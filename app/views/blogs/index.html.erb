<div class="container fadeIn">

	<div class="row">

		<div class="col-md-12">

			<h1 style="text-align:center; font-size:32px;">Blog</h1>
			
			<br />
			
			<% if signed_in? %>
				<p style="text-align:center;">
					<%= link_to("New Blog Post", new_blog_path) %>
				</p>

			<% end %>

			<br />

			<% @blogs.each do |blog| %>

				<div class="blog_index">

					<div class="col-md-4 col-md-offset-4">

						<h2><%= link_to(blog.title, blog) %></h2>

						<p>Posted: <%= blog.created_at.strftime('%d %b, %Y') %></p><br />
					</div>

					<div class="col-md-6 col-md-offset-3">

						<% if blog.image.file? %>

							<%= image_tag blog.image.url(:large), class:".img-responsive", height:"100%", width:"100%" %><br /><br />

						<% end %>

					</div>

					<div class="col-md-4 col-md-offset-4">

						<p><%= simple_format(blog.content) %></p><br />

						<div style="text-align:center;"><%= social_share_button_tag(blog.title, :popup => "true") %></div>

						<br />

						<% if @blogs.count > 1 %><hr /><% end %>

					</div>

				</div>

			<% end %>

		</div>

	</div>

</div>

<script>
	$(document).ready(function(){
		$('.fade').fadeIn(1000);
	});
</script>